{
  "Orion": {
    "Database": {
      "ConnectionString": "${DATABASE_CONNECTION_STRING}",
      "MaxRetryCount": 5,
      "MaxRetryDelay": 60,
      "MinPoolSize": 20,
      "MaxPoolSize": 100,
      "ConnectionLifetime": 300
    },
    "RabbitMq": {
      "HostName": "${RABBITMQ_HOSTNAME}",
      "Port": 5672,
      "UserName": "${RABBITMQ_USERNAME}",
      "Password": "${RABBITMQ_PASSWORD}",
      "VirtualHost": "/production",
      "RequestedHeartbeat": 60,
      "NetworkRecoveryInterval": 10,
      "AutomaticRecoveryEnabled": true
    },
    "Email": {
      "Provider": "SendGrid",
      "FromEmail": "orders@orion.com",
      "FromName": "Orion",
      "ReplyToEmail": "support@orion.com",
      "SendGrid": {
        "ApiKey": "${SENDGRID_API_KEY}",
        "EnableClickTracking": true,
        "EnableOpenTracking": true
      },
      "Smtp": {
        "Host": "${SMTP_HOST}",
        "Port": 587,
        "EnableSsl": true,
        "UserName": "${SMTP_USERNAME}",
        "Password": "${SMTP_PASSWORD}",
        "Timeout": 30000
      }
    },
    "Jwt": {
      "SecretKey": "${JWT_SECRET_KEY}",
      "Issuer": "orion-api",
      "Audience": "orion-users",
      "ExpirationMinutes": 60,
      "RefreshTokenExpirationMinutes": 1440,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true,
      "ValidateIssuerSigningKey": true
    },
    "SignalR": {
      "CorsOrigins": [
        "https://orion.com",
        "https://www.orion.com",
        "https://admin.orion.com"
      ],
      "KeepAliveInterval": 15,
      "ClientTimeoutInterval": 30,
      "HandshakeTimeout": 15,
      "MaximumReceiveMessageSize": 32768
    },
    "Monitoring": {
      "EnableHealthChecks": true,
      "EnableMetrics": true,
      "EnableTracing": true,
      "HealthCheckPath": "/health",
      "MetricsPath": "/metrics",
      "ApplicationInsightsKey": "${APPLICATION_INSIGHTS_KEY}",
      "ElasticSearchUrl": "${ELASTICSEARCH_URL}",
      "PrometheusUrl": "${PROMETHEUS_URL}"
    },
    "Api": {
      "BaseUrl": "https://api.orion.com",
      "ApiKey": "${ORION_API_KEY}",
      "RequestTimeoutSeconds": 30,
      "MaxConcurrentRequests": 200,
      "RateLimit": {
        "Enabled": true,
        "RequestsPerMinute": 100,
        "RequestsPerHour": 1000,
        "RequestsPerDay": 10000
      },
      "AllowedOrigins": [
        "https://orion.com",
        "https://www.orion.com",
        "https://admin.orion.com"
      ],
      "AllowedMethods": [
        "GET",
        "POST",
        "PUT",
        "DELETE"
      ],
      "AllowedHeaders": [
        "Content-Type",
        "Authorization",
        "X-Requested-With",
        "X-API-Key"
      ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "AllowedHosts": "orion.com;www.orion.com;api.orion.com"
}